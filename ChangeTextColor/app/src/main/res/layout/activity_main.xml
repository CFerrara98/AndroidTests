<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e3e3e3"
    >

    <TextView
        android:id="@+id/textToChange"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:text="I will change my color!"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#eb8034"
        android:background="#344ceb"
        />
    <Button
        android:id="@+id/buttonChanger"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Change text color!"
        android:textSize="12dp"
        android:layout_below="@+id/textToChange"
        android:layout_centerHorizontal="true"
        android:onClick="executeChange"
        />

</RelativeLayout>